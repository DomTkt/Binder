<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_link_black_24dp"
            android:tint="#eee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_profile_details_main_picture"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:paddingTop="32dp"/>

            <TextView
                android:id="@+id/fragment_profile_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Scarlett johanson"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/fragment_profile_details_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="32 y.o"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/fragment_profile_details_looking_or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Woman looking for a man"
                android:textStyle="bold"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/fragment_profile_details_match_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_link_black_24dp"/>

            <ImageView
                android:id="@+id/fragment_profile_details_chat_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_chat_black_24dp"/>

            <ImageView
                android:id="@+id/fragment_profile_details_rdv_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_favorite_black_24dp"/>

        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#E8EAF6">

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/fragment_profile_details_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:text="Qsdqs djsqlhd sqkdhsqdk sqhskqjsdsdhdsqk jdhqskjdhsqdks qhdskjdhqskjd sqhdkjqhdqskjdhsqd kjqshdksq jdhsqkjd sqdqskjh dqsd"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#E8EAF6">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_profile_details_pictures_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

</LinearLayout>